{
  "name": "mockfly",
  "version": "1.3.1",
  "description": "轻量级 Mock API 服务 CLI 工具",
  "type": "module",
  "main": "./dist/index.mjs",
  "bin": {
    "mockfly": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:coverage:unit": "vitest run tests/unit --coverage",
    "test:coverage:integration": "vitest run tests/integration --coverage",
    "start": "node bin/cli.js start",
    "start:ts": "tsx src/cli/index.ts",
    "dev:js": "node bin/cli.js dev",
    "dev:ts": "tsx src/cli/index.ts dev",
    "prepublishOnly": "pnpm run build",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "mock",
    "api",
    "server",
    "cli",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.4",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "fastify": "^4.24.3",
    "lodash.merge": "^4.6.2",
    "path-to-regexp": "^6.2.1"
  },
  "devDependencies": {
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "enquirer": "^2.4.1",
    "picocolors": "^1.1.1",
    "semver": "^7.7.3",
    "supertest": "^6.3.3",
    "tsdown": "^0.17.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./dist/cli.mjs",
    "./package.json": "./package.json"
  }
}
